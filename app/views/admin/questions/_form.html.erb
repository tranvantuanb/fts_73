<%= form_for [:admin, @question], html: {multipart: true} do |f| %>
  <div class="form-group">
    <%=  render "shared/error_messages", object: @question %>
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :subject %></br>
        <%= f.select :subject_id, options_for_select(@subjects.collect{
          |subject| [subject.name, subject.id]}), {class: "form-control"} %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id  %>
      <div class="row">
        <div class="col-md-9">
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_field :content, class: "form-control", required: "true" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="answer-form">
            <h2 class="text-center new-color"><%= t ".answers" %></h2>
            <div class="form-group">
              <%= f.fields_for :answers do |answers_builder| %>
                <%= render "answer_fields", f: answers_builder %>
              <% end %>
            </div>
            <div class="form-group">
              <div class="btn btn-default add-more-color">
                <%= link_to_add_fields t(".add_more"), f, :answers %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit t(".save"),
            class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
